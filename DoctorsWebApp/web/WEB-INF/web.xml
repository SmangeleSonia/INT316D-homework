<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>StartSessionServlet</servlet-name>
        <servlet-class>za.ac.tut.model.web.StartSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddServlet</servlet-name>
        <servlet-class>za.ac.tut.model.web.AddServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditServlet</servlet-name>
        <servlet-class>za.ac.tut.model.web.EditServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FindServlet</servlet-name>
        <servlet-class>za.ac.tut.model.web.FindServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewServlet</servlet-name>
        <servlet-class>za.ac.tut.model.web.ViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewPServlet</servlet-name>
        <servlet-class>za.ac.tut.model.web.ViewPServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewByAgeServlet</servlet-name>
        <servlet-class>za.ac.tut.model.web.ViewByAgeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewNSServlet</servlet-name>
        <servlet-class>za.ac.tut.model.web.ViewNSServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetYoungServlet</servlet-name>
        <servlet-class>za.ac.tut.model.web.GetYoungServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndServlet</servlet-name>
        <servlet-class>za.ac.tut.model.web.EndServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartSessionServlet</servlet-name>
        <url-pattern>/StartSessionServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddServlet</servlet-name>
        <url-pattern>/AddServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditServlet</servlet-name>
        <url-pattern>/EditServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FindServlet</servlet-name>
        <url-pattern>/FindServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewServlet</servlet-name>
        <url-pattern>/ViewServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewPServlet</servlet-name>
        <url-pattern>/ViewPServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewByAgeServlet</servlet-name>
        <url-pattern>/ViewByAgeServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewNSServlet</servlet-name>
        <url-pattern>/ViewNSServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetYoungServlet</servlet-name>
        <url-pattern>/GetYoungServlet.do</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndServlet</servlet-name>
        <url-pattern>/EndServlet.do</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <security-constraint>
        <display-name>AdminConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>AdminRecorce</web-resource-name>
            <description>Recources available for admin</description>
            <url-pattern>/add_doc.jsp</url-pattern>
            <url-pattern>/edit_doc.jsp</url-pattern>
            <url-pattern>/find_doc.jsp</url-pattern>
            <url-pattern>/view_docs.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>ManagerConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>ManagerRecource</web-resource-name>
            <description>Recources available for manager</description>
            <url-pattern>/find_doc.jsp</url-pattern>
            <url-pattern>/view_docs.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>manager</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>ARealms</realm-name>
        <form-login-config>
            <form-login-page>/login_page.jsp</form-login-page>
            <form-error-page>/login_error_page.jsp</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Admin must be authorized</description>
        <role-name>admin</role-name>
    </security-role>
    <security-role>
        <description>Manager must be authorized</description>
        <role-name>manager</role-name>
    </security-role>
    <error-page>
        <error-code>403</error-code>
        <location>/user_forbidden.jsp</location>
    </error-page>
</web-app>
